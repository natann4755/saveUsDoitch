<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="166dp"
    android:layout_height="87dp"
    android:background="@drawable/rounded_corner_map_info"
    xmlns:tools="http://schemas.android.com/tools"
    >


    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:gravity="center">

        <ImageView
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:background="@drawable/close_btn" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="11dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/CIVA_adrress_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:textColor="@color/add_btn_color"
            android:fontFamily="@font/assistant_regular"
            tools:text="יפו 127 ירושלים"
            />


        <TextView
            android:id="@+id/CIVA_date_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:textColor="@color/loginColor"
            android:fontFamily="@font/assistant_regular"
            tools:text="19/03/2020  "
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/CIVA_start_and_end_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_alignParentStart="true"
                android:textColor="@color/loginColorLite"
                android:fontFamily="@font/assistant_regular"
                tools:text="10:45 - 13:45"
                />


            <TextView
                android:id="@+id/CIVA_sum_time_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="14sp"
                android:layout_marginEnd="7dp"
                android:textColor="@color/loginColorLite"
                android:fontFamily="@font/assistant_semibold"
                tools:text="00:03:13"
                />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>