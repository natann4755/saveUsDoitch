<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal"
        android:weightSum="359">


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="16" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:background="@drawable/red_circle" />


        <TextView
            android:id="@+id/MPI_location_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="7dp"
            android:layout_weight="237"
            android:fontFamily="@font/assistant_regular"
            android:text="יפו 127 ירושלים"
            android:textColor="@color/loginColor"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="11dp"
            android:layout_weight="81"
            android:orientation="vertical">


            <TextView
                android:id="@+id/MPI_start_end_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/assistant_regular"
                android:text="10:45 - 13:45"
                android:layout_gravity="end"
                android:textColor="@color/loginColorLite"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/MPI_sum_time_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/assistant_semibold"
                android:text="00:03:13"
                android:textColor="#333333"
                android:textSize="16sp" />

        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="16" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineColor"/>


</LinearLayout>