<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:toils="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="13dp"
    android:layout_marginEnd="16dp"
    android:orientation="vertical"
    android:weightSum="520"
    android:background="@color/myPlacesColor"
    tools:context=".wall_screen.UserProfileFragment">


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="22" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="31">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/assistant_semibold"
            android:text="@string/details"
            android:textColor="@color/loginColor"
            android:textSize="24sp" />


        <LinearLayout
            android:id="@+id/UPF_edit_btn_LL"
            android:layout_width="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="end"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="14.9dp"
                android:layout_height="14.9dp"
                android:layout_gravity="center"
                android:background="@drawable/edit_profile" />

        </LinearLayout>


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="22" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="47">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/assistant_semibold"
                android:text="@string/user_name"
                android:textColor="@color/loginEditTextColor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/UPF_name_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/assistant_semibold"
                tools:text="ישראל כהן"
                android:textColor="@color/loginColor"
                android:textSize="16sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/assistant_semibold"
                android:text="@string/phone_number"
                android:textColor="@color/loginEditTextColor"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/UPF_phone_number_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/assistant_semibold"
                tools:text="050-8522322"
                android:textColor="@color/loginColor"
                android:textSize="16sp" />


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineColor" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="61">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/assistant_semibold"
                android:text="@string/birth"
                android:textColor="@color/loginEditTextColor"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/UPF_birthday_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/assistant_semibold"
                tools:text="-"
                android:textColor="@color/loginColor"
                android:textSize="16sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/assistant_semibold"
                android:text="@string/mail"
                android:textColor="@color/loginEditTextColor"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/UPF_mail_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/assistant_semibold"
                tools:text="israel@gmail.com"
                android:textColor="@color/loginColor"
                android:textSize="16sp" />


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineColor" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="59">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/assistant_semibold"
                android:text="@string/languagh"
                android:textColor="@color/loginEditTextColor"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/UPF_languagh_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/assistant_semibold"
                tools:text="עברית"
                android:textColor="@color/loginColor"
                android:textSize="16sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/assistant_semibold"
                android:text="@string/get_notification"
                android:textColor="@color/loginEditTextColor"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/UPF_get_notification_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/assistant_semibold"
                tools:text="כן"
                android:textColor="@color/loginColor"
                android:textSize="16sp" />


        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineColor" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="27" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/rect_with_stroke"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="20.2dp"
                android:layout_height="24.9dp"
                android:layout_gravity="center"
                android:background="@drawable/how_it_work" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:text="@string/how_it_work"
                android:textColor="#051549"
                android:textSize="15sp" />


        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rect_with_stroke"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/terms" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:text="@string/terms_of_use2"
                android:textColor="#051549"
                android:textSize="15sp" />


        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rect_with_stroke"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="27dp"
                android:layout_height="24.2dp"
                android:layout_gravity="center"
                android:background="@drawable/report" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:text="@string/report"
                android:textColor="#051549"
                android:textSize="15sp" />


        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rect_with_stroke"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:background="@drawable/share_vector" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:text="@string/share"
                android:textColor="#051549"
                android:textSize="15sp" />

        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="17" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="46"
        android:background="@color/add_btn_color">


        <ImageView
            android:layout_width="16dp"
            android:layout_height="21.3dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="22dp"
            android:background="@drawable/import_places" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text="@string/import_my_places" />


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12" />


</LinearLayout>